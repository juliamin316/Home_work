def draw_barchart(numbers):
    # Находим максимальное число для определения высоты столбцов
    max_number = max(numbers)
    
    # Добавляем горизонтальную линию сверху
    print('-' * (len(numbers) * 2 + 3))
    
    # Рисуем столбцы
    for i in range(max_number, 0, -1):
        row = '| '  # Начало строки с вертикальной линией
        for number in numbers:
            if number >= i:
                row += '* '
            else:
                row += '  '
        row += '|'  # Конец строки с вертикальной линией
        print(row)
    
    # Добавляем дополнительные столбцы слева и справа от диаграммы
    print('-' * (len(numbers) * 2 + 3))
    

# код выведет вертикальную столбчатую диаграмму в рамке:
numbers = [3, 5, 2, 7, 4]
draw_barchart(numbers)

# результат работы кода: 
---------
| *   * |
| *   * |
| *   * |
| * * * |
| * * * |
| * * * |
| * * * |
---------
